<% layout('layout/boilerplate') %>

  <style>
    body {
      background-image: url('/images/loginformbg.jpg');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
    }
  </style>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="login-form">
          <h2>User Login</h2>
          <form action="/user/login" method="post">
            <div class="form-group mb-3">
              <input type="email" class="form-control" name="email" placeholder="Email" id="email" required value="guest@gmail.com">
            </div>
            <div class="form-group mb-3">
              <input type="password" class="form-control" name="password" placeholder="Password" id="password" required value="guest">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
